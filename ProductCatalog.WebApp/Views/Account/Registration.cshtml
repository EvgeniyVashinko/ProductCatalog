@model ProductCatalog.WebApp.ViewModels.Login.RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}

<h2 class="my-3 ms-3">Регистрация</h2>


<div class="row ms-2">
    <div class="col-5">
        <form asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password1" class="control-label">Пароль 1</label>
                <input asp-for="Password1" type="password" class="form-control" />
                <span asp-validation-for="Password1" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password2" class="control-label">Пароль 2</label>
                <input asp-for="Password2" type="password" class="form-control" />
                <span asp-validation-for="Password2" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Зарегистрироваться" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
