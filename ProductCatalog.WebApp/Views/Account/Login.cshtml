@model LoginViewModel

@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-center my-5">
    <div class="card text-center p-3">
        <div class="card-body">
            <h5 class="card-title mb-4">Добро пожаловать!</h5>

            <form asp-action="Login">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="row my-3">
                    <label asp-for="Email" class="col-sm-4 col-form-label text-start">Email</label>
                    <div class="col-sm-8">
                        <input asp-for="Email" type="email" class="form-control">
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Password" class="col-sm-4 col-form-label text-start">Пароль</label>
                    <div class="col-sm-8">
                        <input asp-for="Password" type="password" class="form-control">
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-1 mt-4 d-flex justify-content-end">
                    <input type="submit" value="Войти" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</div>