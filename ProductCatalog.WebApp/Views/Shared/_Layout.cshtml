<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @if (@ViewBag.Title is not null)
    {
        <title>@ViewBag.Title</title>
    }
    else
    {
        <title>Catalog</title>
    }

    @await Html.PartialAsync("CssPartial")
</head>
<body class="container-xxl">
    <div></div>
    <header class="position-sticky top-0px">
        @await Html.PartialAsync("HeaderPartial")
    </header>

    <main>
        <div id="modalContent"></div>
        @RenderBody()
    </main>

    <footer>
        @await Html.PartialAsync("FooterPartial")
    </footer>

    @await Html.PartialAsync("ScriptsPartial")

    @RenderSection("Scripts", false)
</body>
</html>